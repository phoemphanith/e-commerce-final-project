<%- include("partials/header"); -%>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid">
            <h1 class="mt-4">Dashboard</h1>
            <div class="card mb-4">
              <div class="card-header d-flex justify-content-between">
                <p>
                  <i class="fas fa-table mr-1"></i>
                  Products List
                </p>
                <a class="btn btn-primary" href="/addproduct">Add New Product</a>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Per Product</th>
                        <th>Promotion</th>
                        <th>Detail</th>
                        <th>Instock At</th>
                        <th>Category</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% products.forEach(product => { %>
                        <tr>
                          <td class="d-flex align-items-center">
                            <img src="/image/products/<%= product.image %>" alt="" width="60px">
                            <p class="m-2"><%= product.productName %></p>
                          </td>
                          <td class="align-middle"><%= product.quantity %></td>
                          <td class="align-middle">$<%= product.pricePerProduct %></td>
                          <td class="align-middle"><%= product.promotion*100 %>%</td>
                          <td class="align-middle"><%= product.detail %></td>
                          <td class="align-middle"><%= product.instockAt %></td>
                          <td class="align-middle"><%= product.category %></td>
                          <td class="align-middle"><a href="/updateproduct/<%= product._id %>">Edit</a></td>
                          <td class="align-middle"><a href="/delete/<%= product._id %>">Delete</a></td>
                        </tr>
                      <% }) %>

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </main>
        <footer class="py-4 bg-light mt-auto">
          <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-between small">
              <div class="text-muted">Copyright &copy; Your Website 2020</div>
              <div>
                <a href="#">Privacy Policy</a>
                &middot;
                <a href="#">Terms &amp; Conditions</a>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="js/scripts.js"></script>
  </body>
</html>
