<%- include("partials/header"); -%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous" />
<script src="../js/ckeditor/ckeditor.js"></script>
<div id="layoutSidenav_content">
  <main>
    <div class="container-fluid">
      <form action="/addproduct" method="post" class="p-2">
        <div class="mb-3">
          <label class="form-label">Product Name</label>
          <input type="text" name="productName" required class="form-control" />
        </div>
        <div class="mb-3">
          <label class="form-label">Category</label>
          <select name="category" class="form-select" aria-label="Default select example">
            <option selected>Click and choose category</option>
            <% category.forEach(cat => { %>
            <option value="<%= cat.categoryName %>"><%= cat.categoryName %></option>
            <% }) %>
          </select>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class="input-group mb-3">
              <span class="input-group-text">Quantity:</span>
              <input type="number" name="quantity" value="0" min="0" class="form-control" />
            </div>
          </div>
          <div class="col-md-4">
            <div class="input-group mb-3">
              <span class="input-group-text">Price Per Product:</span>
              <input type="number" name="pricePerProduct" class="form-control" aria-label="Amount (to the nearest dollar)" min="0">
              <span class="input-group-text">$</span>
            </div>
          </div>
          <div class="col-md-4">
            <div class="input-group mb-3">
              <span class="input-group-text">Promotion</span>
              <input type="number" name="promotion" class="form-control" aria-label="Amount (to the nearest dollar)" min="0" max="100" value="0">
              <span class="input-group-text">%</span>
            </div>
          </div>
        </div>


        <!-- TODO: Upload Image -->
        <div class="mb-3">
          <label class="form-label">Detail</label>
          <textarea name="detail" rows="5" class="form-control"></textarea>
        </div>
        <button class="btn btn-primary p-2" type="submit" name="submit" style="width: 100px">Post</button>
      </form>
    </div>
  </main>
  <%- include("partials/footer"); -%>
